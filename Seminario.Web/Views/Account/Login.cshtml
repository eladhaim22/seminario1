@model Seminario.Web.Models.LoginModel




<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
	<link rel="stylesheet" href="~/Content/bootstrap.css">
    <title>SDD - Sistema de Descuento de Documentos</title>
    </head>
<body>


		<div class="container">
			 <div class="col-md-12" style="height:100px"></div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <center><img src="~/Content/Images/logo.chico.png" title="ICBC" alt="ICBC"></center>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm(@Html.ActionLink("App", "AddSimulacion")))
{
                            @Html.AntiForgeryToken()
                            <fieldset>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Legajo, new { @class = "form-control", @placeholder = "Legajo", @name = "legajo", @type = "legajo" })
                               </div>
                                <div class="form-group">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Contraseña", @name = "password", @type = "password" })
                                </div>
                                <div class="checkbox">
									<label>
										@Html.CheckBoxFor(m => m.RememberMe)Remember me?
									</label>
                                </div>
								 @Html.ValidationSummary()
                                <input type="submit" class="btn btn-lg btn-danger btn-block" value="Ingresar" />
                            </fieldset>
                        }
						@Html.ActionLink("Register", "Register","Account",null, new {type = "button",@class="btn btn-lg btn-danger btn-block" })

                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/javascriptCustom")
}
